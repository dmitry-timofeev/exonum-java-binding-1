<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>exonum-java-binding-app</id>
  <formats>
    <format>zip</format>
  </formats>
  <!--Maven Assembly Plugin does not support regular expressions in `files`, so we use `fileSets`-->
  <fileSets>
    <!--Rust std library-->
    <fileSet>
      <directory>${packaging.basedir}</directory>
      <outputDirectory>lib/native</outputDirectory>
      <includes>
        <include>%regex[libstd.*]</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${packaging.rust}/target/debug/lib/java</directory>
      <outputDirectory>lib/java</outputDirectory>
      <includes>
        <include>*.*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <!--Main EJB App executable-->
    <file>
      <source>${packaging.rust}/target/debug/ejb-app</source>
    </file>
    <!--libjava_bindings.[so|dylib]-->
    <file>
      <source>${rust.libraryPath}</source>
      <outputDirectory>lib/native</outputDirectory>
    </file>
    <!--Fallback configuration for a logger-->
    <file>
      <source>${packaging.rust}/ejb-app/log4j-fallback.xml</source>
    </file>
    <!--Tutorial and licenses-->
    <file>
      <source>${packaging.rust}/ejb-app/TUTORIAL.md</source>
    </file>
    <file>
      <source>${packaging.basedir}/LICENSES-THIRD-PARTY.TXT</source>
    </file>
    <file>
      <source>${packaging.basedir}/LICENSES-THIRD-PARTY-NATIVE</source>
    </file>
    <file>
      <source>${packaging.basedir}/LICENSE</source>
    </file>
  </files>
</assembly>
